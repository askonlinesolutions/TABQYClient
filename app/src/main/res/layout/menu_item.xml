<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_color"
    tools:context=".OnlineOrder.Fragments.MenuFragment">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_width="85dp"
               android:layout_height="85dp">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="3dp"
                   android:src="@drawable/itemplaceholder"/>

           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="7dp"
               android:layout_marginTop="9dp"
               android:orientation="vertical">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/menu_food"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Spring Roll"
                       android:textSize="12sp"
                       android:textColor="@color/light_black"
                       />


                   <TextView
                       android:id="@+id/menu_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="44.00"
                       android:layout_marginRight="10dp"
                       android:textSize="10sp"
                       android:layout_alignParentEnd="true"
                       />

               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="7dp">


                   <TextView
                       android:id="@+id/menu_desc"
                       android:layout_width="130dp"
                       android:layout_height="wrap_content"
                       android:text="This is the description of your food."
                       android:textSize="9sp"
                       />

               </RelativeLayout>


               <RelativeLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >

                   <ImageView
                       android:layout_width="19dp"
                       android:layout_height="19dp"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/ic_add_circle"
                       android:layout_alignParentEnd="true"/>

               </RelativeLayout>


           </LinearLayout>




       </LinearLayout>


       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/view_color"></View>


   </LinearLayout>
