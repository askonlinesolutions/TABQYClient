<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/open_green</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="userRatingBar">
        <item name="android:stepSize">0.4</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <!--<style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">-->
    <!--<item name="android:progressDrawable">@drawable/custom_rating_bar</item>-->
    <!--<item name="android:minHeight">18dp</item>-->
    <!--<item name="android:maxHeight">18dp</item>-->
    <!--</style>-->
    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/sketch_black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="backgroundTint">@color/white_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

