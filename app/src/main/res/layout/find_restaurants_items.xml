<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color">

    <RelativeLayout
        android:id="@+id/res_img_rel"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/dotted_background"
        android:padding="7dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/placeholder" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/res_img_rel"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dao Xiang Restaurant"
                android:textColor="@color/sketch_black"
                android:textSize="13sp" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:id="@+id/tv_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_green_background"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:paddingTop="4dp"
                android:paddingRight="17dp"
                android:paddingBottom="4dp"
                android:text="Open"
                android:textColor="@color/white_color"
                android:textSize="9dp" />
        </RelativeLayout>

        <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="International,Asian,Chinese"
            android:textColor="@color/textgray"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/orange"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"
                android:theme="@style/RatingBar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/ratingBar"
                android:text="(461 Ratings)"
                android:textColor="@color/text_color_2"
                android:textSize="8sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gray_solid"
            android:padding="6dp">

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textColor="@color/textgray"
                android:textSize="8sp" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/distance"
                android:text="4miles"
                android:textColor="@color/sketch_black"
                android:textSize="10sp" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Order for 2"
                android:textColor="@color/sketch_black"
                android:textSize="8sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/card"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_card" />

            <ImageView
                android:id="@+id/cash"
                android:layout_width="21dp"
                android:layout_height="23dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/card"
                android:src="@drawable/ic_cash" />

            <ImageView
                android:id="@+id/cashtwo"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/cash"
                android:src="@drawable/ic_cash_two" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/cashtwo"
                android:text="Points"
                android:textSize="8sp" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/points"
                android:background="@drawable/button_orange"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="3"
                android:textColor="@color/white_color"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/coins"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/three"
                android:src="@drawable/ic_coins" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextView
                android:id="@+id/tv_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_pink_round"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:paddingRight="16dp"
                android:paddingBottom="6dp"
                android:text="Reserve a table"
                android:textColor="@color/white_color"
                android:textSize="7sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lin"
        android:background="@color/view_color" />

</RelativeLayout>