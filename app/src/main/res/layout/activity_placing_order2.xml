<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"
    android:layout_height="match_parent"
    tools:context=".PlacingOrderActivity">
    <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
        android:id="@+id/activity_login_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme_color"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="Placing your order"
        android:textColor="@color/white_color"
        android:textSize="@dimen/title_size" />
    <ImageView
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:src="@drawable/food"
        android:layout_height="250dp" />
    <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="So far,so good"
        android:textSize="30dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/_60sdp"
        android:paddingLeft="@dimen/_60sdp"
        android:paddingBottom="@dimen/size_15"
        android:paddingTop="@dimen/size_15">

        <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/time_btn"
            android:layout_height="@dimen/_80sdp"
            android:textSize="@dimen/_30sdp"
            android:textColor="@android:color/white"
            android:text="2"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_15sdp"
            android:gravity="center"
            android:background="@drawable/time_background"/>

        <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
            android:id="@+id/second_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_80sdp"
            android:textSize="@dimen/_30sdp"
            android:textColor="@android:color/white"
            android:text="09"
            android:padding="@dimen/_15sdp"
            android:gravity="center"
            android:background="@drawable/time_background"
            android:layout_marginRight="@dimen/size_5"
            android:layout_marginLeft="@dimen/_15sdp"/>
    </LinearLayout>
    <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:text="Waiting for resturant to accept \n the order and provide pickup \n time "
        android:layout_height="wrap_content" />

</LinearLayout>