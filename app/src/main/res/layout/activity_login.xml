<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".Activities.LoginActivity">

    <RelativeLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_chevron_left"/>

        <TextView
            android:id="@+id/header_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title_back"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

   <ScrollView

       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/linear_login"

       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_centerInParent="true"
           android:layout_margin="15dp"
           android:orientation="vertical"
          >

           <ImageView
               android:id="@+id/user_image"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/ic_login_user"
               android:layout_gravity="center_horizontal"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Already have an account ?"
               android:layout_marginTop="20dp"
               android:textColor="@android:color/white"
               android:textSize="15sp"
               android:layout_below="@+id/user_image"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/ic_login"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Email"
                       android:textSize="15sp"
                       android:lineSpacingExtra="7dp"
                       android:background="@null"
                       android:textColor="@android:color/white"
                       android:layout_marginLeft="7dp"
                       android:textColorHint="@android:color/white"
                       />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginLeft="10dp"
                       android:background="@color/silver_gery"></View>

               </LinearLayout>

           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:layout_marginTop="8dp"
                   android:src="@drawable/ic_lock"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                  <EditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Password"
                      android:textSize="15sp"
                      android:background="@null"
                      android:lineSpacingExtra="7dp"
                      android:textColor="@android:color/white"
                      android:layout_marginLeft="7dp"
                      android:textColorHint="@android:color/white"
                      />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:layout_marginLeft="10dp"
                      android:background="@color/silver_gery"></View>

              </LinearLayout>

           </LinearLayout>

           <android.support.v7.widget.CardView
           android:id="@+id/siginin_card"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           app:cardCornerRadius="5dp"
           >

           <RelativeLayout
               android:id="@+id/login_layout"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/curve_background">

               <TextView
                   android:id="@+id/login_button_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:layout_centerInParent="true"
                   android:textColor="@android:color/white"
                   android:text="LOGIN"/>

           </RelativeLayout>

       </android.support.v7.widget.CardView>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               >

               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@android:color/white"
                   android:textSize="12sp"
                   android:text="Forgot Password?"/>

               <TextView
                   android:id="@+id/create_acnt_txt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@android:color/white"
                   android:textSize="12sp"
                   android:layout_alignParentEnd="true"
                   android:text="Create an account"/>


           </RelativeLayout>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Register by"
               android:layout_marginTop="9dp"
               android:textSize="12sp"
               android:textColor="@android:color/white"
               android:layout_gravity="center_horizontal"/>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_gravity="center_horizontal"
               >

               <ImageView
                   android:id="@+id/facebook_image"
                   android:layout_width="55dp"
                   android:layout_height="55dp"
                   android:src="@drawable/ic_facebook"/>

               <ImageView
                   android:id="@+id/twitter_image"
                   android:layout_width="55dp"
                   android:layout_height="55dp"
                   android:layout_marginLeft="15dp"
                   android:src="@drawable/ic_twi"/>

               <ImageView
                   android:id="@+id/google_image"
                   android:layout_width="55dp"
                   android:layout_height="55dp"
                   android:layout_marginLeft="15dp"
                   android:src="@drawable/ic_google"/>




           </LinearLayout>

       </LinearLayout>


   </ScrollView>


</RelativeLayout>