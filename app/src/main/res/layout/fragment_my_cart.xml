<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:orientation="vertical"
        tools:context=".OnlineOrder.Activity.MyCart">

        <!--
                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:text="@string/my_cart"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/title_size"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_back"
                    android:drawablePadding="15dp"
                    android:paddingLeft="15dp"
                    android:background="@color/theme_color"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_color_2"/>
        -->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_my_cart_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color" />


        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginTop="100sp"
            android:background="@color/bg_color_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@color/white_color"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/size_15">

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="@string/subtotal"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/size_12" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="SAR 144.00"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/size_12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/bg_color_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@color/white_color"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/size_15">

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="@string/vat"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/size_12" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="SAR 5.00"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/size_12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/bg_color_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@color/white_color"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/size_15">

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="@string/grand_total"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/size_12" />

            <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="Determined after select delivery address"
                android:textColor="@color/red_color"
                android:textSize="@dimen/size_8" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_color"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="7sp"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginRight="@dimen/size_15"
                android:layout_marginTop="7sp"
                android:background="@drawable/shape_dotted_border_theme">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/activity_cart_btn_redeem">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_offer"
                        android:drawablePadding="@dimen/size_10"
                        android:gravity="center"
                        android:hint="@string/enter_coupon_code_here"
                        android:inputType="text"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/size_10" />

                </RelativeLayout>

                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:id="@+id/activity_cart_btn_redeem"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_background_button"
                    android:gravity="center"
                    android:text="@string/redeem"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_20"
                android:paddingRight="@dimen/size_20"
                android:paddingTop="@dimen/size_15">

                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:id="@+id/detail_btn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_background_button"
                    android:gravity="center"
                    android:text="@string/add_more"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_10" />

                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:id="@+id/checkout_btn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/size_5"
                    android:layout_marginRight="@dimen/size_5"
                    android:layout_weight="1"
                    android:background="@drawable/shape_background_button"
                    android:gravity="center"
                    android:text="@string/checkout"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_10" />

                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:id="@+id/guest_btn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_background_button"
                    android:gravity="center"
                    android:text="@string/checkout_as_guest"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_10" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>