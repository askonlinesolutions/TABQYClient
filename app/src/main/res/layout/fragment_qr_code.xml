<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_2"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".tableCode.qrCode.QrCodeFragment">

        <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My QR Code"
            android:textColor="@color/sketch_black"
            android:textSize="@dimen/_30sdp" />

        <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="Scane this code for invite to someone in samer order"
            android:textColor="@color/sketch_black"
            android:textSize="@dimen/_16sdp" />

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">


            <ImageView
                android:id="@+id/qr_iv"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_qr_code" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>