    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/person_pic"
            app:civ_border_color="#FF000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/user_profile_iv"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:orientation="vertical">

                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fatma Bramly"
                    android:textColor="@color/text_color_6"
                    android:textSize="12sp" />

                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abu Dhabi, Al Ain"
                    android:textColor="@color/text_color_4"
                    android:textSize="10sp" />

                <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Very Tasty Food and Delivered on time"
                    android:textColor="@color/text_color_5"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_layout_reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/item_reviews_layout_name"
                android:layout_weight="5.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/quantity_food_reviw"
                        android:drawableLeft="@drawable/ic_quality_of_food"
                        android:drawablePadding="10dp"
                        android:text="Quality of food"
                        android:textColor="@color/text_color_1"
                        android:textSize="9dp" />

                    <LinearLayout
                        android:id="@+id/quantity_food_reviw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="4"
                            android:stepSize="0.5"
                            android:theme="@style/userRatingBar" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/item_reviews_layout_review_service"
                        android:drawableLeft="@drawable/ic_customer_service"
                        android:drawablePadding="10dp"
                        android:text="Customer Service"
                        android:textColor="@color/text_color_1"
                        android:textSize="9dp" />

                    <LinearLayout
                        android:id="@+id/item_reviews_layout_review_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <RatingBar
                            android:id="@+id/service_Rating_Bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:rating="3"
                            android:theme="@style/userRatingBar" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/item_reviews_layout_review_layout_4"
                        android:drawableLeft="@drawable/ic_delivery_time_two"
                        android:drawablePadding="10dp"
                        android:text="Delivery time"
                        android:textColor="@color/text_color_1"
                        android:textSize="9dp" />

                    <LinearLayout
                        android:id="@+id/item_reviews_layout_review_layout_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <RatingBar
                            android:id="@+id/time_Rating_Bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:rating="3"
                            android:theme="@style/userRatingBar" />

                    </LinearLayout>

                </RelativeLayout>

