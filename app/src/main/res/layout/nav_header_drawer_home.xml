<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/info_image_1"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparent_bg_light_prime" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_circular_iv"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/person_pic"
                        app:civ_border_color="@color/white_color"
                        app:civ_border_width="1dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_green_background"
                            android:contentDescription="@string/nav_header_desc"
                            android:padding="@dimen/_5sdp"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:src="@drawable/ic_card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="KSA"
                            android:textColor="@color/white_color" />
                    </LinearLayout>


                </LinearLayout>

                <!--<ImageView-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:contentDescription="@string/nav_header_desc"-->
                <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->
                <!--app:srcCompat="@mipmap/ic_launcher_round" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewBold
                            android:id="@+id/name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="Akhilesh kumar"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_11sdp" />


                        <!--<TextView-->
                        <!--android:id="@+id/client_name_tv"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->
                        <!--android:textColor="@color/white_color"-->
                        <!--android:text="Akhilesh kumar"-->
                        <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1" />-->

                        <com.askonlinesolutions.user.tabqyclient.customText.CustomTextViewRegular
                            android:id="@+id/emailid_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="akhilesh123@gmail.com"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/setting_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@drawable/ic_settings" />

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>


        <include
            android:id="@+id/nav_bar"
            layout="@layout/navigation_bar_layout"></include>


    </LinearLayout>

</layout>
